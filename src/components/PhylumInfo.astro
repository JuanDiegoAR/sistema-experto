---
import { phylums } from "../utils/phylums";

interface Props {
  phylum: string;
}

const { phylum } = Astro.props;

const finded = phylums.find((element) => element.title === phylum);
---

<section
  class="flex flex-col w-[80vw] rounded-[45px] shadow-stable mb-[77px] p-8 justify-center items-center relative"
>
  <button
    class="flex flew-row justify-center items-center shadow-stable w-[125px] h-[50px] rounded-3xl xs:mb-5 md:absolute top-[30px] left-[25px] gap-2 hover:scale-110 duration-500 transition"
    onclick="location.href='/explore'"
  >
    <img src="/flecha.svg" alt="" class="w-8 h-8" />
    Volver</button
  >
  <h2 class="font-bold text-3xl mb-8">{finded?.title}</h2>
  <article
    class="grid grid-cols-phylumInfoGrid justify-center justify-items-center w-full"
  >
    <div
      transition:name=`body-img-${phylum}`
      class="flex rounded-[45px] shadow-stable w-[360px] h-[400px] items-center justify-center mb-8"
    >
      <img
        transition:name=`img-${phylum}`
        class="h-[300px] w-[300px]"
        src={finded?.image}
      />
    </div>
    <div class="w-[90%]">
      <div class="grid grid-cols-phylumTagsGrid justify-items-left gap-4 mb-4">
        {
          finded?.tags.map((t) => (
            <p class="rounded-[45px] text-center py-2 bg-[#156703] text-white font-bold select-none">
              {t}
            </p>
          ))
        }
      </div>
      <div class="flex flex-col gap-4">
        {
          finded?.description.map((p) => (
            <p class="text-xl text-left text-pretty">{p}</p>
          ))
        }
      </div>
    </div>
  </article>
</section>
